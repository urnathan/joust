check:: tests/joust.defs all tests/die
	cd ${<D} ; JOUST=${<F} ../joust joust aloy kratos ezio die

tests/joust.defs: Makesub
	echo '# Automatically generated by Make' >$@
	echo srcdir=../${srcdir}/tests/ >>$@

tests/die: tests/die.o libnms.a
	$(CXX) $(LDFLAGS) $< -lnms $(LIBS) -o $@

clean::
	rm -f tests/die

ifeq ($(filter %clean,$(MAKECMDGOALS)),)
-include tests/die.d
endif
