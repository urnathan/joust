Yeah, let's use ezio to check itself!
RUN: <$srcdir$src ezio $src |
RUN: ezio -p OUT $src |
RUN: ezio -p OUT -p ERR $src
RUN-END:

# this is what the ezio we're checking checks
CHECK: Yeah,
CHECK-NEXT: RUN: {:.*} {ezio:e.io} {inp:[^ ]+} |
CHECK: $ezio -p OUT $inp |
CHECK-NEXT: $ezio -p OUT -p ERR $inp
CHECK-NONE: RUN
CHECK-LABEL: RUN-END:
CHECK-LABEL: CHECK: Yeah
CHECK-END:

# these are what the ezios checking the earlier invokcation checks
# we must be careful to not hide CHECK lines the first ezio triggers on
OUT-OPTION: matchSol
OUT-NEVER: ERROR:
OUT-NEVER: FAIL:
OUT-OPTION: !matchSol
ERR-OPTION: matchSol
ERR: 1:
ERR-OPTION: !matchEol
OUT: PASS: {:.*}:MATCH Yeah
ERR-OPTION: matchSol
ERR-NEXT: 2:
ERR-OPTION: !matchEol
OUT-NEXT: PASS: {:.*}:NEXT RUN:
ERR-OPTION: matchSol
ERR-NEXT: 3:
ERR-OPTION: !matchEol
OUT-NEXT: PASS: {:.*}:MATCH {:.}ezio -p
ERR-OPTION: matchSol
ERR-NEXT: 4:
ERR-OPTION: !matchEol
OUT-NEXT: PASS: {:.*}:NEXT {:.}ezio -p
ERR-OPTION: matchSol
ERR-NEXT: 5:
ERR-OPTION: !matchEol
OUT-NEXT: PASS: {:.*}:NONE RUN
OUT-NEXT: PASS: {:.*}:LABEL RUN-END:
ERR-OPTION: matchSol
ERR-NEXT: 6:
ERR-LABEL: 8:CHECK: Yeah,
ERR-OPTION: !matchEol
OUT-NEXT: PASS: {:.*}:LABEL CHECK: Yeah
